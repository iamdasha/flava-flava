<p id="notice"><%= notice %></p>

<div class="index_handb">
  <h1>Предметы одежды</h1>
  <%= link_to 'Создать', new_cloth_path, :class =>"link_new" %>
</div>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Название</th>
      <th>Создатель</th>
      <th>Дата обновления</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @cloths.each do |cloth| %>
      <tr>
        <td class="table1"><%= link_to(image_tag(cloth.clothimage.thumb.url, alt: 'Image'), cloth.clothimage.url, target: '_blank') if cloth.clothimage? %></td>
        <td class="font24 "><%= cloth.name %></td>
        <td class="font20"><%= cloth.artist.name %></td>
        <td class="font20"><%= cloth.updated_at %></td>
        <td><%= link_to image_tag('show.svg'), cloth %></td>
        <% if user_signed_in? && current_user.isadmin == true %>
          <td><%= link_to image_tag('edit.svg'), edit_cloth_path(cloth)  %></td>
          <td><%= link_to image_tag('destroy.svg'), cloth, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
