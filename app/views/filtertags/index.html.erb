<p id="notice"><%= notice %></p>

<h1>Filtertags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Display in navbar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filtertags.each do |filtertag| %>
      <tr>
        <td><%= filtertag.name %></td>
        <td><%= filtertag.display_in_navbar %></td>
        <td><%= link_to 'Show', filtertag %></td>
        <td><%= link_to 'Edit', edit_filtertag_path(filtertag) %></td>
        <td><%= link_to 'Destroy', filtertag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Filtertag', new_filtertag_path %>
