<p id="notice"><%= notice %></p>

<div class="index_handb">
  <h1>Образы</h1>
  <%= link_to 'Создать', new_look_path, :class =>"link_new" %>
</div>


<div class="filter ">
<% Filtertag.all.each do |filtertag| %>
  <%= link_to filtertag.name, looks_path(filtertag: filtertag.id) %>
  <% end %>
</div>

<%= react_component 'O_AllLooks', { looks: @looks, filtertags: @filtertags }  %>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @looks.each do |look| %>
      <tr>
        <td><%= link_to(image_tag(look.image.thumb.url, alt: 'Image'), look.image.url, target: '_blank') if look.image? %></td>
        <td><%= look.title %></td>
        <td><%= look.content %></td>
        <td><%= link_to 'Show', look %></td>
        <td><%= link_to 'Edit', edit_look_path(look) %></td>
        <td><%= link_to 'Destroy', look, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
