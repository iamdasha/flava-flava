<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Общая информация</h2>

  <div class="field">
    <p class="p_form">Про кого статья?</p>
    <%= form.select :artist_id, Artist.pluck(:name, :id) %>
  </div>

  <div class="field">
    <p class="p_form">Выберите фильтр статьи</p>
    <%= form.select :filtertag_id, Filtertag.pluck(:name, :id) %>
  </div>

  <div class="field">
    <p class="p_form">К какой подборке относится статья?</p>
    <%= form.select :collection_id, Collection.pluck(:name, :id) %>
  </div>

  <h2 class="h2_form">Контент статьи</h2>


  <div class="field">
    <p class="p_form">Название статьи</p>
    <%= form.text_field :title, :class =>"tags_area", placeholder: "Введите название" %>
  </div>

  <div class="field">
    <p class="p_form">Текст статьи</p>
    <%= form.cktext_area :content %>
  </div>



  <div class="field photo_form">
    <p class="p_form">Фото образов</p>
    <%= form.file_field :fimage, :class =>"social_link_form social_link_form2" %>
    <%= form.file_field :simage, :class =>"social_link_form social_link_form2" %>
    <%= form.file_field :timage, :class =>"social_link_form social_link_form1" %>
  </div>


  <div class="actions button_form">
    <%= form.submit "Сохранить" %>
  </div>


<% end %>
