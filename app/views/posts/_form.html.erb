<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <h4>Название статьи</h4>
    <%= form.text_area :title, :class =>"tags_area" %>
  </div>

  <div>
  	<%= form.label :postcover %>
  	<%= form.file_field :postcover %>
  </div>

  <div class="field">
    <%= form.label :artist_id %>
    <%= form.select :artist_id, Artist.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :style_id %>
    <%= form.select :style_id, Style.pluck(:name, :id) %>
  </div>

  <div class="field">
    <h4>Укажите коллаб</h4>
      <%= form.label :brand_id %>
      <%= form.select :brand_id, Brand.pluck(:name, :id) %>
  </div>

  <div class="field">
    <h4>Укажите тип статьи</h4>
      <%= form.label :type_id %>
      <%= form.select :type_id, Type.pluck(:name, :id) %>
  </div>

  <div class="field">
    <h4>Текст статьи</h4>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :fimage %>
    <%= form.file_field :fimage %>
  </div>
  <div>
    <%= form.label :simage %>
    <%= form.file_field :simage %>
  </div>
  <div>
    <%= form.label :timage %>
    <%= form.file_field :timage %>
  </div>
  <div class="field">
    <%= form.label :collection_id %>
    <%= form.select :collection_id, Collection.pluck(:name, :id) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
