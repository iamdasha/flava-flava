<div class="posts_inartist">
  <% @collections.each do |collection| %>
    <div class="posts_inartist_item">
      <%= link_to image_tag(collection.cover.thumb.url), collection if collection.cover? %>
      <div class="posts_inartist_bottom">
        <p class="posttitle_inartist">
          <%= link_to collection.name, collection %>
        </p>
        <%= link_to image_tag('show.svg'), collection %>
