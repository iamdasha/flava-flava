<p>ID <%= @user.id %></p>
<%= image_tag(@user.avatar.url, alt: 'Image') if @user.avatar? %>
<p>Email <%= @user.email %></p>
<p>Username <%= @user.username %></p>

<% if user_signed_in? && current_user.isadmin == true %>
  <p>Admin <%= @user.isadmin %></p>
<% end %>

In favorites <%= @user.favorites.count %> <%= (@user.favorites.count) == 1 ? 'Post' : 'Posts'%>
<% @posts.each do |post| %>
  <br><%= link_to post.title, post %>
<% end %>
<hr>
In artistfavorites <%= @user.artistfavorites.count %> <%= (@user.artistfavorites.count) == 1 ? 'Artist' : 'Artists'%>
<% @artists.each do |artist| %>
  <br><%= link_to artist.name, artist %>
<% end %>
<hr>

<% if user_signed_in? && @user.id == current_user.id %>
	<p><%= link_to 'Edit profile', edit_user_registration_path %></p>
<% end %>
