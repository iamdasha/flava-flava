<div class="collection_content">
  <%= link_to image_tag('back.svg'), collections_path %>

  <div class="post_title collection_title">
    <h1 class="">
      <%= @collection.name %>
    </h1>



  </div>


</div>
<p class="post_text">
  <%= @collection.description %>
</p>



<div class="posts_inartist">
  <% @posts.each do |post| %>
    <div class="posts_inartist_item">
      <%= link_to image_tag(post.fimage.thumb.url), post if post.fimage? %>
      <div class="posts_inartist_bottom">
        <p class="posttitle_inartist">
          <%= link_to post.title, post %>
        </p>
        <%= link_to image_tag('show.svg'), post %>
      </div>


    </div>

  <% end %>
</div>

<h2>Артисты</h2>
<div class="posts_inartist">
  <% @artists.each do |artist| %>
    <div class="posts_inartist_item">
      <%= link_to image_tag(artist.artistphoto.url), artist if artist.artistphoto? %>
      <div class="posts_inartist_bottom">
        <p class="posttitle_inartist">
          <%= link_to artist.name, artist %>
        </p>
        <%= link_to image_tag('show.svg'), artist %>
      </div>


    </div>

  <% end %>
</div>




<div class="user_link_edit filtertag_link_edit">

  <% if user_signed_in? && current_user.isadmin == true %>
    <div class="filtertag_link_edit_item filtertag_extra">
      <%= link_to image_tag('edit.svg'), edit_collection_path(@collection) %>
      <p>
        <%= link_to 'Редактировать', edit_collection_path(@collection), :class =>"link_new link_new_user" %>
      </p>
    </div>
    <div class="filtertag_link_edit_item">
      <%= link_to image_tag('destroy.svg'), @collection, method: :delete, data: { confirm: 'Are you sure?' }%>
      <p>
        <%= link_to 'Удалить', @collection, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"link_new link_new_user" %>
      </p>
    </div>

  <% end %>
</div>



