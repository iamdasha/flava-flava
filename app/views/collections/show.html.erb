<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @collection.name %>
</p>

<% @posts.each do |post| %>
  <p>
    <%= link_to post.title, post %>
  </p>
<% end %>

<% if user_signed_in? %>

  <% pre_colectfavorite = @collection.colectfavorites.find { |colectfavorite| colectfavorite.user_id == current_user.id} %>
  <% if pre_colectfavorite %>
      <%= button_to 'Remove from Colectfavorite', collection_colectfavorite_path(@collection, pre_colectfavorite), method: :delete %>
  <% else %>
      <%= button_to 'Add to Colectfavorite', collection_colectfavorites_path(@collection), method: :collection %>
  <% end %>

<% end %>

<%= link_to 'Edit', edit_collection_path(@collection) %> |
<%= link_to 'Back', collections_path %>
