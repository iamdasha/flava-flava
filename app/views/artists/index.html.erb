<p id="notice"><%= notice %></p>

<h1>Artists</h1>





<% Filtertag.where(display_in_navbar: true).each do |filtertag| %>
<%= link_to filtertag.name, artists_path(filtertag: filtertag.name) %> |
<% end %>

<hr>
<% Style.all.each do |style| %>
<%= link_to style.name, artists_path(style: style.name) %>|
<% end %>

<hr>
<% Brand.all.each do |brand| %>
<%= link_to brand.name, artists_path(brand: brand.name) %>|
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.sex %></td>
        <td><%= artist.age %></td>
        <td><%= artist.filtertag.name %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Artist', new_artist_path %>
