<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
  	<%= form.label :artistphoto %>
  	<%= form.file_field :artistphoto %>
  </div>

  <div class="field">
    <%= form.label :sex %>
    <%= form.select :sex, ['Мужcкой', 'Женский', 'Вне гендера']%>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>

  <div class="field">
    <%= form.label :filtertag_id %>
    <%= form.select :filtertag_id, Filtertag.pluck(:name, :id) %>
  </div>

  <div class="field">
      <%= form.label :style_id %>
      <%= form.select :style_id, Style.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.select :brand_id, Brand.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, ['Хип–хоп', 'Поп', 'Рок','Электро', 'Джаз', 'Народная', 'Классика', 'Шансон']%>
  </div>

  <div class="field">
  	<%= form.label :instagram %>
  	<%= form.text_field :instagram %>
  </div>

  <div class="field">
    <%= form.label :youtube %>
    <%= form.text_field :youtube %>
  </div>

  <div class="field">
    <%= form.label :spotify %>
    <%= form.text_field :spotify %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
