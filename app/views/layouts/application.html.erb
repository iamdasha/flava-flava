<!DOCTYPE html>
<html>
  <head>
    <title>FlavaPrj</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% elsif alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <body>
    <% if notice %>
      <%= notice %>
    <% end %>
    <div class="sidebar">
      <ul>
        <li><%= link_to "Артисты", artists_path %></li>
        <li><%= link_to "Статьи", posts_path %></li>
        <li>Подборки</li>
        <li><%= link_to "Люди", users_path %></li>
      </ul>

      <ul>
        <li><%= link_to "Фильтры", filtertags_path %></li>
        <li><%= link_to "Стили", styles_path %></li>
        <li><%= link_to "Бренды", brands_path %></li>
        <li><%= link_to "Типы статей", types_path %></li>
        <li><%= link_to "Предметы одежды", cloths_path %></li>
      </ul>
    </div>
    <div class="top_menu">
      <% if user_signed_in? %>
        <%= link_to 'Account', current_user %> | <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path %> | <%= link_to 'Sign Up', new_user_registration_path %>
      <% end %>
    </div>
    <div class="menubar">
      <a href="#"><%= image_tag("logo.svg") %></a>
      <a href="#" ><div class="profile"></div></a>
    </div>

    <%= yield %>
  </body>
</html>
