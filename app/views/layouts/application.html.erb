<!DOCTYPE html>
<html>
  <head>
    <title>FlavaPrj</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>

  </head>
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% elsif alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <body>
  <% if user_signed_in? && current_user.isadmin == true %>
    <div class="sidebar">
      <ul class="ul1">
        <li><%= link_to "Артисты", artists_path %></li>
        <li><%= link_to "Статьи", posts_path %></li>
        <li><%= link_to "Образы", looks_path %></li>
        <li><%= link_to "Подборки", collections_path %></li>
        <li><%= link_to "Люди", users_path %></li>
      </ul>

      <ul class="ul2">
        <li><%= link_to "Фильтры", filtertags_path %></li>
        <li><%= link_to "Бренды", brands_path %></li>
        <li><%= link_to "Предметы одежды", cloths_path %></li>
      </ul>
    </div>
  <% end %>

    <div class="menubar">
      <%= image_tag("logo.svg") %>
      <div class="menubar_left">
        <% if user_signed_in? %>
            <%= link_to 'Выйти', destroy_user_session_path, method: :delete, :class =>"link_new" %>

            <div class="avatar">

              <%= image_tag(current_user.avatar.thumb.url, alt: 'Image') if current_user.avatar? %>
              <%= link_to '', current_user %>
            </div>

        <% else %>
          <%= link_to 'Войти', new_user_session_path, :class =>"link_new" %> | <%= link_to 'Регистрация', new_user_registration_path, :class =>"link_new" %>
        <% end %>
      </div>


    </div>
    <%= react_component 'A_Text' %>

    <%= yield %>
  </body>
</html>
